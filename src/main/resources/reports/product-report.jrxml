<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="product_report" pageWidth="842" pageHeight="595" orientation="Landscape"
              columnWidth="802" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <!-- Excel Export Properties -->
    <property name="net.sf.jasperreports.export.xls.detect.cell.type" value="true"/>
    <property name="net.sf.jasperreports.export.xls.remove.empty.space.between.rows" value="true"/>
    <property name="net.sf.jasperreports.export.xls.remove.empty.space.between.columns" value="true"/>
    <property name="net.sf.jasperreports.export.xls.white.page.background" value="false"/>
    <property name="net.sf.jasperreports.export.xls.ignore.graphics" value="true"/>
    <property name="net.sf.jasperreports.export.xls.ignore.cell.background" value="false"/>
    <property name="net.sf.jasperreports.export.xls.one.page.per.sheet" value="false"/>
    <property name="net.sf.jasperreports.export.xls.wrap.text" value="false"/>
    <property name="net.sf.jasperreports.export.xls.column.width.ratio" value="1.0f"/>
    <property name="net.sf.jasperreports.print.keep.full.text" value="true"/>

    <style name="Table_TH" mode="Opaque" backcolor="#4472C4">
        <box>
            <pen lineWidth="0.5" lineColor="#000000"/>
        </box>
        <paragraph lineSpacing="Single"/>
    </style>

    <style name="Table_TD" mode="Opaque" backcolor="#FFFFFF">
        <box>
            <pen lineWidth="0.5" lineColor="#000000"/>
        </box>
        <paragraph lineSpacing="Single"/>
    </style>

    <field name="id" class="java.lang.Long"/>
    <field name="name" class="java.lang.String"/>
    <field name="description" class="java.lang.String"/>
    <field name="price" class="java.math.BigDecimal"/>
    <field name="categoryName" class="java.lang.String"/>
    <field name="isFeature" class="java.lang.Boolean"/>
    <field name="createdAt" class="java.time.LocalDateTime"/>

    <title>
        <band height="50">
            <staticText>
                <reportElement x="0" y="10" width="802" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="18" isBold="true"/>
                </textElement>
                <text><![CDATA[Product Report]]></text>
            </staticText>
        </band>
    </title>

    <columnHeader>
        <band height="30">
            <staticText>
                <reportElement style="Table_TH" mode="Opaque" x="0" y="0" width="50" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="SansSerif" size="10" isBold="true" pdfFontName="Helvetica-Bold"/>
                </textElement>
                <text><![CDATA[ID]]></text>
            </staticText>
            <staticText>
                <reportElement style="Table_TH" mode="Opaque" x="50" y="0" width="150" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="SansSerif" size="10" isBold="true" pdfFontName="Helvetica-Bold"/>
                </textElement>
                <text><![CDATA[Name]]></text>
            </staticText>
            <staticText>
                <reportElement style="Table_TH" mode="Opaque" x="200" y="0" width="200" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="SansSerif" size="10" isBold="true" pdfFontName="Helvetica-Bold"/>
                </textElement>
                <text><![CDATA[Description]]></text>
            </staticText>
            <staticText>
                <reportElement style="Table_TH" mode="Opaque" x="400" y="0" width="100" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="SansSerif" size="10" isBold="true" pdfFontName="Helvetica-Bold"/>
                </textElement>
                <text><![CDATA[Price]]></text>
            </staticText>
            <staticText>
                <reportElement style="Table_TH" mode="Opaque" x="500" y="0" width="120" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="SansSerif" size="10" isBold="true" pdfFontName="Helvetica-Bold"/>
                </textElement>
                <text><![CDATA[Category]]></text>
            </staticText>
            <staticText>
                <reportElement style="Table_TH" mode="Opaque" x="620" y="0" width="80" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="SansSerif" size="10" isBold="true" pdfFontName="Helvetica-Bold"/>
                </textElement>
                <text><![CDATA[Featured]]></text>
            </staticText>
            <staticText>
                <reportElement style="Table_TH" mode="Opaque" x="700" y="0" width="102" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="SansSerif" size="10" isBold="true" pdfFontName="Helvetica-Bold"/>
                </textElement>
                <text><![CDATA[Created At]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="30" splitType="Stretch">
            <textField isStretchWithOverflow="true">
                <reportElement style="Table_TD" stretchType="RelativeToTallestObject" x="0" y="0" width="50" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="SansSerif" size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{id}]]></textFieldExpression>
            </textField>
            <textField isStretchWithOverflow="true">
                <reportElement style="Table_TD" stretchType="RelativeToTallestObject" x="50" y="0" width="150" height="30"/>
                <textElement verticalAlignment="Middle">
                    <font fontName="SansSerif" size="9"/>
                    <paragraph leftIndent="5"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{name}]]></textFieldExpression>
            </textField>
            <textField isStretchWithOverflow="true" isBlankWhenNull="true">
                <reportElement style="Table_TD" stretchType="RelativeToTallestObject" x="200" y="0" width="200" height="30"/>
                <textElement verticalAlignment="Middle">
                    <font fontName="SansSerif" size="9"/>
                    <paragraph leftIndent="5"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{description}]]></textFieldExpression>
            </textField>
            <textField isStretchWithOverflow="true" pattern="#,##0.00">
                <reportElement style="Table_TD" stretchType="RelativeToTallestObject" x="400" y="0" width="100" height="30"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font fontName="SansSerif" size="9"/>
                    <paragraph rightIndent="5"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{price}]]></textFieldExpression>
            </textField>
            <textField isStretchWithOverflow="true" isBlankWhenNull="true">
                <reportElement style="Table_TD" stretchType="RelativeToTallestObject" x="500" y="0" width="120" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="SansSerif" size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{categoryName}]]></textFieldExpression>
            </textField>
            <textField isStretchWithOverflow="true">
                <reportElement style="Table_TD" stretchType="RelativeToTallestObject" x="620" y="0" width="80" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="SansSerif" size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{isFeature} ? "Yes" : "No"]]></textFieldExpression>
            </textField>
            <textField isStretchWithOverflow="true" pattern="dd/MM/yyyy HH:mm">
                <reportElement style="Table_TD" stretchType="RelativeToTallestObject" x="700" y="0" width="102" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="SansSerif" size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{createdAt}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

</jasperReport>